<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="category"
            type="com.example.mustafakocer.data.model.Category" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <TextView
            android:id="@+id/rowCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{category.name}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp"

            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/rowCategoryUrl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{category.url}"

            app:layout_constraintStart_toStartOf="@id/rowCategoryName"
            app:layout_constraintEnd_toEndOf="@id/rowCategoryName"
            app:layout_constraintTop_toBottomOf="@id/rowCategoryName"
            android:layout_marginTop="30dp"

            android:textSize="14sp"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>